@model IEnumerable<Tamanho>

@{
    ViewData["Title"] = "Tamanhos";
}

<partial name="_NovoItem" model="nameof(Tamanho)" />



        <table class="table table-striped bg-dark text-light">
            <thead>
                <tr>
                    <th>Ações</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var tamanho in Model)
                {

                    <tr>
                        <td>
                            <div class="d-flex flex-column">
                                <a class="btn btn-success" asp-action="Atualizar" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-id="@tamanho.Id">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                        <td class="align-middle">

                        </td>
                        <td class="align-middle">@tamanho.Nome</td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div> 